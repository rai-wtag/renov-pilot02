{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard (Gulli Replacement)",
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "groupName": "General Updates",
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "isVulnerabilityAlert": true,
      "dependencyDashboardApproval": false,
      "labels": [
        "security",
        "critical"
      ],
      "prPrefix": "SECURITY: ",
      "groupName": null
    },
    {
      "matchRepositories": [
        "rai-wtag/renov-pilot02"
      ],
      "addLabels": [
        "pilot-team-b"
      ],
      "dependencyDashboardApproval": true,
      "groupName": "General Updates",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchRepositories": [
        "rai-wtag/renov-pilot02"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "enabled": false
    },
    {
      "matchRepositories": [
        "rai-wtag/renov-pilot02"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchRepositories": [
        "rai-wtag/renov-pilot02"
      ],
      "schedule": [
        "* 8-19 * * 0-4"
      ]
    }
  ]
}
